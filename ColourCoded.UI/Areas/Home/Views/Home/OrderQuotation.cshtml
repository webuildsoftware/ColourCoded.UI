      <td>
        <table id="rowOne" width="100%">
          <tr>
            <td width="50%">Company Profile information</td>
            <td width="50%">Order summary</td>
          </tr>
        </table>
      </td>
    </tr>
    <tr>
      <td>
        <table id="rowTwo" width="100%">
          <tr>
            <td width="50%">Customer information</td>
            <td width="50%">Delivery address</td>
          </tr>
        </table>
      </td>
    </tr>
    <tr>
      <td>
        <table id="rowThree"  width="100%">
          <tr>
            <td width="100%">Order Details</td>
          </tr>
        </table>
      </td>
    </tr>
    <tr>
      <td>
        <table id="rowFour"  width="100%">
          <tr>
            <td width="60%">Banking Details</td>
            <td width="40%">Order totals</td>
          </tr>
        </table>
      </td>
    </tr>
